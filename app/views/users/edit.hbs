<div class="row">
	<div class="col-md-12">
        <form method="post" action="/update" class="form-horizontal" enctype="multipart/form-data">

			<input type="hidden" class="form-control" name="name" value="{{user._name}}">

			<div class="form-group">
				<label for="inputEmail3" class="col-sm-2 control-label">이메일</label>
				<div class="col-sm-10">
					<input type="text" class="form-control" name="email" value="{{user.email}}">
				</div>
			</div>

            
			<div class="form-group">
				<label for="inputEmail3" class="col-sm-2 control-label">닉네임</label>
				<div class="col-sm-10">
					<input type="text" class="form-control" name="email" value="{{user.nick}}">
				</div>
			</div>

			<div class="form-group">
				<label for="inputEmail3" class="col-sm-2 control-label">비밀번호</label>
				<div class="col-sm-10">
					<input type="number" class="form-control" name="password" value="{{user.password}}">
				</div>
			</div>


			<div class="form-group">
				<label for="inputEmail3" class="col-sm-2 control-label">사진</label>
				<div class="col-sm-10">
					<input type="file" name="file" class="form-control-file" id="exampleInputFile" aria-describedby="fileHelp">
				</div>
			</div>

			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<button type="button" class="btn btn-primary btn-block btn-submit">수정</button>
				</div>
			</div>
		</form>
	</div>
</div>