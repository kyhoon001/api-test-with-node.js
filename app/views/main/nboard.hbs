<script src="scripts/board.js"></script>



<div class="card mb-3">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th>제목</th>
                        <th style="width:100px">작성자</th>
                        <th style="width:100px">조회수</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each nboards}}
                    <tr>
                        <td>
                            <a href="/nshow/{{this._id}}">{{this.title}}</a></td>
                        <td>{{this.nick}}</td>
                        <td>{{this.view}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>

            <a class="btn btn-primary btn-md" href="/nsignup">작성하기</a>
        </div>
    </div>
</div>
